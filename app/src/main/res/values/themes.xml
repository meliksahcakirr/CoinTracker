<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApp" parent="Base.Theme.MyApp" />

    <style name="Base.Theme.MyApp" parent="Base.Theme.App">
        <item name="colorPrimary">@color/blueGrayDark</item>
        <item name="colorPrimaryVariant">@color/blueGrayDarkVariant</item>
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/orangeVariant</item>
        <item name="android:colorBackground">@color/blueGrayDark</item>
        <item name="colorSurface">@color/blueGrayDark</item>
        <item name="colorError">@color/redDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnError">@color/white</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog.Alert
        </item>
    </style>

    <style name="Base.Theme.App" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="textAppearanceHeadline4">
            @style/TextAppearance.MaterialComponents.Headline4.Custom
        </item>
        <item name="textAppearanceHeadline6">
            @style/TextAppearance.MaterialComponents.Headline6.Custom
        </item>
    </style>

    <style name="TextAppearance.MaterialComponents.Headline4.Custom" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Headline6.Custom" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MaterialCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_radius_normal</item>
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>

    <style name="CoinCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:clickable">true</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="cardCornerRadius">@dimen/card_radius_none</item>
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>

    <style name="CoinTextView" parent="">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle2
        </item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CurrencyTextView" parent="">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption
        </item>
        <item name="android:textColor">@color/grayLight</item>
    </style>

    <style name="VolumeTextView" parent="">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption
        </item>
        <item name="android:textColor">@color/grayLight</item>
    </style>

    <style name="CustomOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/grayLight</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle2
        </item>
    </style>
</resources>